<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" prefHeight="282.0" prefWidth="445.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.tix_measurements.time.client.ui.Setup2Controller">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>

    <TextField fx:id="installationName" onAction="#createInstallation" GridPane.rowIndex="4" />
    <Hyperlink fx:id="helpLink" onAction="#help" text="Obtener ayuda" GridPane.rowIndex="6" />
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Paso 2/2" GridPane.rowIndex="1" />
    <HBox prefWidth="200.0" GridPane.rowIndex="7">
        <children>
            <Button fx:id="createInstallationButton" mnemonicParsing="false" onAction="#createInstallation" text="Finalizar" />
            <Hyperlink fx:id="cancelLink" onAction="#cancel" text="Cancelar">
                <HBox.margin>
                    <Insets left="20.0" />
                </HBox.margin>
            </Hyperlink>
        </children>
        <GridPane.margin>
            <Insets top="10.0" />
        </GridPane.margin>
    </HBox>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ingrese un nombre para identificar la nueva instalación:" GridPane.rowIndex="3" />
   <GridPane GridPane.rowIndex="2">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="150.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="189.0" minWidth="10.0" prefWidth="189.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Text fx:id="status" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="RIGHT" text=" " GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
         </Text>
          <Text text="Crear instalación" GridPane.columnSpan="2" GridPane.rowIndex="1">
              <GridPane.margin>
                  <Insets bottom="10.0" />
              </GridPane.margin>
              <font>
                  <Font size="18.0" />
              </font>
          </Text>
      </children>
   </GridPane>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
